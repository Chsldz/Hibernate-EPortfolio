<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "Auto" table = "auto">
      
      <meta attribute = "class-description">
         This class show the car detail, and mapping for the DB 
      </meta>
      
      <id name = "id" type = "int" column = "id">
         <generator class="native"/>
      </id>
      
      <property name = "marke" column = "marke" type = "string"/>
      <property name = "model" column = "model" type = "string"/>
      <property name = "leistung" column = "leistung" type = "int"/>
      <property name = "farbe" column = "farbe" type = "string"/>
      
   </class>
</hibernate-mapping>